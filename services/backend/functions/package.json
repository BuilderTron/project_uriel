{
  "name": "project-uriel-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Project Uriel Portfolio",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "lint": "eslint src --ext .js,.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "npm run build && mocha lib/tests/**/*.test.js --timeout 10000",
    "test:watch": "npm run build:watch & mocha lib/tests/**/*.test.js --watch --timeout 10000",
    "test:auth": "npm run build && mocha lib/tests/auth.test.js --timeout 10000"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.5.0",
    "@sendgrid/mail": "^8.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.27.5",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.1.6",
    "mocha": "^10.2.0",
    "chai": "^4.3.8",
    "@types/mocha": "^10.0.1",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17"
  },
  "private": true
}