# Staging Environment Configuration
# Copy this file to .env.staging and update with actual values

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# Firebase Project Configuration
FIREBASE_PROJECT_ID=project-uriel-staging
FIREBASE_API_KEY=your-staging-api-key
FIREBASE_AUTH_DOMAIN=project-uriel-staging.firebaseapp.com
FIREBASE_DATABASE_URL=https://project-uriel-staging.firebaseio.com
FIREBASE_STORAGE_BUCKET=project-uriel-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-staging-sender-id
FIREBASE_APP_ID=your-staging-app-id
FIREBASE_MEASUREMENT_ID=your-staging-measurement-id

# Frontend Configuration (Vite)
VITE_FIREBASE_API_KEY=your-staging-api-key
VITE_FIREBASE_AUTH_DOMAIN=project-uriel-staging.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=project-uriel-staging
VITE_FIREBASE_STORAGE_BUCKET=project-uriel-staging.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-staging-sender-id
VITE_FIREBASE_APP_ID=your-staging-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-staging-measurement-id

# Application Configuration
VITE_APP_NAME="Project Uriel (Staging)"
VITE_APP_URL=https://staging.project-uriel.com
VITE_APP_ENVIRONMENT=staging

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=true

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@project-uriel.com
SENDGRID_TO_EMAIL=admin@project-uriel.com
SENDGRID_TEMPLATE_CONTACT=d-your-contact-template-id

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Security
JWT_SECRET=your-staging-jwt-secret-change-this
API_RATE_LIMIT=100

# Monitoring (Sentry)
SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=staging

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# CDN Configuration (optional)
CDN_URL=https://cdn-staging.project-uriel.com
VITE_CDN_URL=https://cdn-staging.project-uriel.com