# Production Environment Configuration
# Copy this file to .env.production and update with actual values
# CRITICAL: Keep this file secure and never commit with real values!

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Firebase Project Configuration
FIREBASE_PROJECT_ID=project-uriel-prod
FIREBASE_API_KEY=your-production-api-key
FIREBASE_AUTH_DOMAIN=project-uriel.firebaseapp.com
FIREBASE_DATABASE_URL=https://project-uriel.firebaseio.com
FIREBASE_STORAGE_BUCKET=project-uriel.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-production-sender-id
FIREBASE_APP_ID=your-production-app-id
FIREBASE_MEASUREMENT_ID=your-production-measurement-id

# Frontend Configuration (Vite)
VITE_FIREBASE_API_KEY=your-production-api-key
VITE_FIREBASE_AUTH_DOMAIN=project-uriel.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=project-uriel-prod
VITE_FIREBASE_STORAGE_BUCKET=project-uriel.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-production-sender-id
VITE_FIREBASE_APP_ID=your-production-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-production-measurement-id

# Application Configuration
VITE_APP_NAME="Project Uriel"
VITE_APP_URL=https://project-uriel.com
VITE_APP_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_DEBUG_MODE=false

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-production-sendgrid-api-key
SENDGRID_FROM_EMAIL=contact@project-uriel.com
SENDGRID_TO_EMAIL=admin@project-uriel.com
SENDGRID_TEMPLATE_CONTACT=d-your-production-contact-template-id
SENDGRID_TEMPLATE_WELCOME=d-your-production-welcome-template-id

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-production-recaptcha-secret-key
VITE_RECAPTCHA_SITE_KEY=your-production-recaptcha-site-key

# Security (CRITICAL - Use strong, unique values!)
JWT_SECRET=your-production-jwt-secret-must-be-very-secure
API_RATE_LIMIT=50
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600000

# Monitoring (Sentry)
SENTRY_DSN=your-production-sentry-dsn
VITE_SENTRY_DSN=your-production-sentry-dsn
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=@project-uriel/webapp@1.0.0

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# CDN Configuration
CDN_URL=https://cdn.project-uriel.com
VITE_CDN_URL=https://cdn.project-uriel.com

# Backup Configuration
BACKUP_BUCKET=gs://project-uriel-backups
BACKUP_SCHEDULE="0 2 * * *"

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Domain Configuration
CUSTOM_DOMAIN=project-uriel.com
SSL_CERTIFICATE_ID=your-ssl-cert-id